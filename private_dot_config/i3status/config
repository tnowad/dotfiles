general {
  colors = false
  interval = 1
}

order += "wireless _first_"
order += "volume master"
order += "read_file brightness"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
  format_up = "W: %essid%quality %ip"
  format_down = "W: down"
}

volume master {
  format = "Vol: %volume"
  format_muted = "â™ª: muted (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

battery all {
  format = "Bat: %percentage %remaining"
}

disk "/" {
  format = "Disk: %used/%total"
}

load {
  format = "CPU: %1min"
}

memory {
  format = "Mem: %used/%total"
}

tztime local {
  format = "%A, %B %d, %Y %H:%M:%S"
}

read_file brightness {
  path = "/sys/class/backlight/amdgpu_bl0/actual_brightness"
  format = "Bri: %content"
}
